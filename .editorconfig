# This file is for unifying the coding style for different editors and IDEs
# http://editorconfig.org
root = true

[*]
# yes, we use tabs
indent_style = tab
# tab size
indent_size = 4

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[package.json,*.yml]
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[{*.txt}]
end_of_line = crlf
